<%= render partial: "shared/user_profile", locals: { user: @user } %>
<%= render partial: "shared/navtab_user", locals: { user: @user } %>
<div class="container">
  <div class="row">
    <% @comments.each do |comment| %>
      <div class="col-sm-12 border-top border-buttom bg-light">
        <div class="row align-items-center">
          <div class="col-sm-8 offset-sm-2" data-link="<%= post_path(comment.post) %>">
            <h4 class="m-3"><%= link_to comment.post.title, post_path(post)%></h4>
            <p class="border p-4 rounded bg-white text-black"><%= comment.content %></p>
          </div>
          <div class="col-sm-2">
            <%= render partial: "shared/edit_button", locals: { type: "Comment", post: comment.post, comment: comment } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
