<div class="container">
  <div class="row">
   <div class="col-sm-12 mt-3">
    <% if @user.errors.any? %>
      <h4>We have some errors here !</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <hr>
     <% end %>
    <h2> Edit Profile </h2>
    <tr>
    <%= form_for [@user] do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :intro, "About you" %>
        <%= f.text_area :intro, class: "form-control" %>
      </div>

      <%= f.label :avatar, "Avatar" %>
      <div class="form-group">
        <%#= image_tag @user.avatar if @user.avatar? %>
        <%#= f.file_field :avatar %>
        <%= f.filestack_field :avatar, 'Upload Your Avatar!',  pickerOptions: { accept: 'image/*'} %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
      </div>
    <% end %>
    </tr>
   </div>
  </div>
</div>
