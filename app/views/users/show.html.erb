<%= render partial: "shared/user_profile", locals: { user: @user } %>
<%= render partial: "shared/navtab_user", locals: { user: @user } %>
<div class="container">
  <div class="row">
    <table class="table table-hover text-center bg-light">
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td data-link="<%= post_path(post) %>"><%= post.title %></td>
            <td data-link="<%= post_path(post) %>">Published</td>
            <td data-link="<%= post_path(post) %>"><%= post.updated_at.strftime("%Y-%m-%d") %></td>
            <td>
              <% if post.user == current_user || current_user.admin? %>
              <div class="buttons">
                  <%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe, edit_post_path(post), class: "btn btn-default" %>
                  <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, post_path(post),method: :delete, data:{ confirm: "Are you sure ?"}, class: "btn btn-default" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if @user == current_user %>
      <%= link_to "New Post", new_post_path, class: "btn btn-info" %>
    <% end %>
  </div>
</div>
